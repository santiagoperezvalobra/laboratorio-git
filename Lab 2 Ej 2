#Ejercicio 2
from datetime import datetime, timedelta
from encodings import utf_8


fecha_inicial=input("Fecha inicial (formato dd.mm.yyyy): ")
inicio=datetime.strptime(fecha_inicial,"%d.%m.%Y")
cant_dias=int(input("Cantidad de días:"))
print("Ingrese la cantidad de minutos que ha estado frente a la pantalla para cada día.")
with open(f"registro-{fecha_inicial}","w+") as archivo:
    contador=0
    for a in range(cant_dias):
        f=inicio+timedelta(days=a)
        f2=f.strftime("%d.%m.%Y")
        temp_cant=input(f"Tiempo para el día {f2}:")
        archivo.writelines(f"{f2}: {temp_cant}.\n")
        contador+=int(temp_cant)
    promedio=contador/cant_dias
    archivo.writelines(f"Periodo {fecha_inicial}\n")
    archivo.writelines(f"Total de minutos: {contador}\n")
    archivo.writelines(f"Promedio en minutos: {promedio} minutos por día\n")

print(f"Se ha almacenado la información en el archivo registro-{fecha_inicial}.txt\n")
#para que te aparezcan los dias despues (en DETALLE), hace que al final del for los 
# guarde en una lista y despues ponele un writelines(lista)
